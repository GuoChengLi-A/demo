<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="ioc.User" id="guochengli">
        <constructor-arg index="0" value="Guo"/>
        <constructor-arg index="1" value="Chengli"/>
        <constructor-arg index="2" value="24"/>
    </bean>

    <bean class="ioc.User" id="testIdRef">
        <property name="firstName" value="guo"/>
        <property name="age" value="23"/>
    </bean>

    <alias name="guochengli" alias="parent"/>

    <bean class="ioc.User" id="yc" primary="true">
        <property name="firstName"  value="Yan"/>
        <property name="lastName"   value="Cong"/>
        <property name="age" >
            <idref bean="testIdRef"/>
        </property>
    </bean>

    <bean id="objectFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
        <property name="targetBeanName" value="yc"/>
    </bean>
</beans>